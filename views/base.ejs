<%- include('header')%>
<div class="text-center center-div" id="login">
    <h1>My simple login page</h1>
    <small>Please don't exploit it :(</small>
    <div class="container w-25 bg-white border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login in for the existing user</span>
            <% if(locals.logout){
                %>
                <div class="alert alert-success text-center" role="alert">
                    <%= logout %>
                </div>
                <%
            }%>
            %>
        </div>
        <form action="/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="username" class="form-control" placeholder="username" name="username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
    <img src="/assets/meme.png" alt="idol Long" width="500" height="250">
</div>

<%- include('footer')%>